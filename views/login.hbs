<div class="container">
  <div class="row valign-wrapper center">
    <div class="col s8">
      <div class="carousel carousel-slider">
        <a class="carousel-item" href="#one!"><img src="images/cover_IE.jpg"></a>
        <a class="carousel-item" href="#two!"><img src="/images/flute.jpg"></a>
        <a class="carousel-item" href="#three!"><img src="/images/pintura.jpg"></a>
        <a class="carousel-item" href="#four!"><img src="/images/drummer.jpg"></a>
        <a class="carousel-item" href="#five!"><img src="/images/camera-vintage.jpg"></a>
      </div>
    </div>
    <div class="col s7"> </div>

    <div class="col s8 ">
      <div class="card text-right" style="width: 90%;">
        <div class="card-body center z-depth-5">
          <h2 class="card-title ">Innuentropia</h2>
          <p class="card-text"></p>
          <i class="fa fa-facebook"></i>
          <a href="/auth/facebook" class="btn-large btn-dark blue ">
            Login with facebook
          </a>

          <a href="/auth/google" class="btn-large red">
            Login with google

          </a>
          <div class="container section center-align">
            <form action="/signup" method="POST">
              <div class="form-group">
                <i class="material-icons prefix left">email</i>
                <label for="exampleInputEmail1">Email address</label>
                <input name="email" type="email" class="form-control" id="exampleInputEmail1"
                  aria-describedby="emailHelp" placeholder="Enter email" required>
              </div>

              <div class="form-group">
                <i class="material-icons prefix left">account_circle</i>
                <label for="username">username</label>
                <input name="username" type="text" class="form-control" id="username" placeholder="Name" required>
              </div>

              <div class="form-group">
                <i class="material-icons prefix left">fingerprint</i>
                <label for="exampleInputPassword">Password</label>
                <input name="password" type="password" class="form-control" id="exampleInputPassword1"
                  placeholder="Password" required>
              </div>

              <button type="submit" class="btn btn-primary">Sign up</button>
            </form>
            {{#if err}}
            <div class="alert alert-danger" role="alert">
              Email or password is incorrect
            </div>
            {{/if}}
            <!-- Modal Trigger -->
            <a class="waves-effect waves-light btn color #2b2d42 modal-trigger" href="#login">Login</a>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>



<!-- Modal Structure -->
<div class="modal" id="login">
  <div class="modal-content">
    {{#if err}}
    <div class="alert alert-danger" role="alert">
      {{err}}
    </div>
    {{/if}}
    <form action="/login" method="POST">
      <div class="form-group">
        <label for="formGroup">email</label>
        <input name="email" type="text" class="form-control" id="formGroupExampleInput" placeholder="email" required>
      </div>
      <div class="form-group">
        <label for="formGroup">Password</label>
        <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"
          required>
      </div>
      <div class="modal-footer">
        <button type="submit" class="modal-close waves-effect waves-green btn-flat" data-dismiss="modal"> Login</button>
      </div>
    </form>
  </div>
</div>


<script>
  document.addEventListener('DOMContentLoaded', function () {


    let elements = document.querySelectorAll('.modal');
    let ins = M.Modal.init(elements);
  });
</script>

